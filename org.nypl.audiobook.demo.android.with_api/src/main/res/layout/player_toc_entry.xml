<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/player_toc_entry"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/player_toc_entry_download_status"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginLeft="16dp"
    android:layout_alignParentLeft="true"
    android:layout_centerVertical="true"
    android:src="@drawable/empty" />

  <ImageView
    android:id="@+id/player_toc_entry_play_status"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_marginLeft="16dp"
    android:layout_toRightOf="@id/player_toc_entry_download_status"
    android:layout_centerVertical="true" />

  <TextView
    android:id="@+id/player_toc_entry_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/player_toc_entry_play_status"
    android:layout_centerVertical="true"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="16dp"
    android:text="â€¦"
    android:textAppearance="@android:style/TextAppearance.Medium" />

  <ImageView
    android:id="@+id/player_toc_entry_op"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_margin="16dp"
    android:src="@drawable/download" />

</RelativeLayout>
