<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:padding="16dp">

  <TextView
    android:id="@+id/feed_user_name_label"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/field_user_name" />

  <EditText
    android:id="@+id/feed_user_name_entry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/feed_user_name_label"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="" />

  <TextView
    android:id="@+id/feed_password_label"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/feed_user_name_entry"
    android:text="@string/field_password" />

  <EditText
    android:id="@+id/feed_password_entry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/feed_password_label"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="" />

  <TextView
    android:id="@+id/feed_borrow_uri_label"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/feed_password_entry"
    android:text="@string/field_borrow_uri" />

  <EditText
    android:id="@+id/feed_borrow_uri_entry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/feed_borrow_uri_label"
    android:ems="10"
    android:inputType="textPersonName"
    android:text="" />

  <Button
    android:id="@+id/feed_fetch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/feed_borrow_uri_entry"
    android:layout_centerHorizontal="true"
    android:text="Go" />

</RelativeLayout>
