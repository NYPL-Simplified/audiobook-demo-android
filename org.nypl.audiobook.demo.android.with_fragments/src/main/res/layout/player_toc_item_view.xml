<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:background="@color/audiobook_player_toc_spine_element_bg_normal"
  android:layout_width="match_parent"
  android:layout_height="80dp">

  <ImageView
    android:id="@+id/player_toc_item_view_separator"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:focusable="false"
    android:clickable="false"
    android:src="@drawable/player_toc_item_separator" />

  <TextView
    android:id="@+id/player_toc_item_view_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="144dp"
    android:ellipsize="end"
    android:textColor="@color/audiobook_player_toc_spine_element_fg_normal"
    android:text="Placeholder"
    android:textSize="24sp" />

  <org.nypl.audiobook.demo.android.with_fragments.PlayerCircularProgressView
    android:id="@+id/player_toc_item_view_progress"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="16dp"
    android:clickable="true"
    android:focusable="true" />

  <TextView
    android:id="@+id/player_toc_item_view_duration"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_marginRight="16dp"
    android:layout_toLeftOf="@id/player_toc_item_view_progress"
    android:textColor="@color/audiobook_player_toc_spine_element_fg_normal"
    android:text="00:00"
    android:textSize="24sp" />

  <ImageView
    android:id="@+id/player_toc_item_view_operation"
    android:layout_width="48dp"
    android:layout_height="48dp"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_marginRight="16dp"
    android:clickable="true"
    android:focusable="true"
    android:src="@drawable/download" />

  <ImageView
    android:id="@+id/player_toc_item_view_border"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="false"
    android:clickable="false"
    android:src="@drawable/player_toc_item_border" />

</RelativeLayout>
